<div class="overflow-hidden bg-white border-gray-100 rounded shadow-lg card">
    <div class="flex p-4 border-b card-header">
        <div class="flex-1">
            <h5 class="text-xl font-semibold ">Details</h5>
        </div>
        <div class="">
            <a href="#" class="btn">Update Details</a>
        </div>
    </div>
    <div class="p-4 bg-gray-100 card-body">

        <section class="grid grid-cols-1 sm:grid-cols-2">
            <div class="text-gray-600">
                <h6 class="mb-3">ACCOUNT INFORMATION</h6>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">ID</p>
                    </div>
                    <div>
                        {{client.id}}
                    </div>
                </section>
                <section class="grid grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Created</p>
                    </div>
                    <div>
                        <p>01/12/2019 23:14</p>
                    </div>
                </section>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Email</p>
                    </div>
                    <div><a href="mailto:{{client.email}}" class="text-blue-500">{{client.email}}</a></div>
                </section>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Job Title</p>
                    </div>
                    <div>
                        <p class="text-gray-600">{{client.job_title}}</p>
                    </div>
                </section>
            </div>
            <div class="text-gray-600">
                <h6 class="mb-3">BILLING INFORMATION</h6>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Company</p>
                    </div>
                    <div>
                        <p>{{client.company}}</p>
                    </div>
                </section>
                <section class="grid grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Address</p>
                    </div>
                    <div>
                        <address>
                            {{client.street_address}} <br>
                            {{client.city}}, {{client.state}}
                        </address>
                    </div>
                </section>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Phone number</p>
                    </div>
                    <div><a href="tel:+{{client.phone}}" class="text-blue-500">+1-{{client.phone}}</a></div>
                </section>
                <section class="grid sm:grid-cols-2">
                    <div>
                        <p class="mb-1 font-semibold">Invoice</p>
                    </div>
                    <div>
                        <p class="font-semibold text-gray-600">1J349SDSS99</p>
                    </div>
                </section>
            </div>

        </section>
    </div>
    <div class="flex justify-end p-4 border-t card-footer">
        <a href="#" class="mr-3 btn">Refund</a>
        <a href="#" class="btn">Save Changes</a>
    </div>
</div>

